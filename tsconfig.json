{
  "compilerOptions": {
    /* Basic Options */
    "rootDir": "src",
    "outDir": "./dist",
    "incremental": false,
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    /* Module Resolution Options */

    "moduleResolution": "node",

    /* Strict Type-Checking Options */

    "strict": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
